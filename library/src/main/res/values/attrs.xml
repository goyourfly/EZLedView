<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EZLedView">
        <attr name="led_radius" format="dimension"/>
        <attr name="led_color" format="color"/>
        <attr name="led_space" format="dimension"/>
        <attr name="led_drawable" format="reference"/>
        <attr name="led_type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="square" value="2"/>
            <enum name="drawable" value="3"/>
        </attr>
        <attr name="content_type">
            <enum name="text" value="1"/>
            <enum name="image" value="2"/>
        </attr>
        <attr name="image" format="reference"/>
        <attr name="text" format="string"/>
        <attr name="text_size" format="dimension"/>
    </declare-styleable>
</resources>